<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/deviceBackground</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="nav" parent="Theme.AppCompat.DayNight.DarkActionBar">
    </style>

    <style name="buttons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:width">180dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:height">60dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextErrorTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="error" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="success" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/success</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="communityWelcomeText" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/graydark</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="shareStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/graydark</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
