<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_regulator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".FooterActivity" />
        <activity
            android:name=".HomepageActivity"
            android:label="@string/feedpage_title" />
        <activity
            android:name=".CommunityActivity"
            android:icon="@drawable/ic_group_black_24dp"
            android:label="@string/forumlabel"
            android:theme="@style/nav" />
        <activity
            android:name=".ProfileActivity"
            android:icon="@drawable/ic_account_circle_black_24dp"
            android:label="@string/profillabel"
            android:theme="@style/nav" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".AddDeviceActivity" />
        <activity
            android:name=".MainActivity"
            android:label="e-Regulator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>